{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$ts-webpack"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				"$ts-webpack-watch"
			],
			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
